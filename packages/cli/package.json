{
  "name": "@skillforge/cli",
  "version": "0.1.0",
  "description": "CLI tool for installing and managing Skills from SkillForge",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "skillforge": "dist/index.js",
    "sf": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "skill",
    "agent",
    "cli",
    "claude",
    "cursor",
    "codex"
  ],
  "author": "SkillForge",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ]
}
